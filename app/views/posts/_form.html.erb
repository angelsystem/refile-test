<%= simple_form_for @post do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.simple_fields_for :pictures do |p| %>
      <%= p.input :file, as: :attachment, direct: true %>
    <% end %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>