<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :content %>
    <%= f.attachment_field :pictures_files, multiple: true %>
    <%= f.simple_fields_for :pictures do |c| %>
      <%= c.input :_destroy, label: 'Eliminar', as: :boolean %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
